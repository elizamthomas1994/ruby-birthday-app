<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" 
    crossorigin="anonymous">
  </head>

  <body style="background-color: #611B87; color: white;">
    <div class="col-md-4 mx-auto" style="margin-top: 150px;">
      <h1>Hello there!</h1>
      <form method="POST" action="/submit">
        <div id="name-secion">
          <h3>What's your name?</h3>
          <div class="form-group">
            <input type="text" class="form-control" id="name" name="name">
          </div>
        </div>

        <div id="birthday-section" style="margin-top: 20px;">
          <h3>When's your birthday?</h3>
          <div class="form-group">
            <label for="birth_date">Day:</label>
            <input type="number" class="form-control" id="birth_date" name="birth_date" min="1" max="31">

            <label for="birth_month" style="margin-top: 10px;">Month:</label>
            <select class="form-select" name="birth_month" id="birth_month">
              <option value="1">January</option>
              <option value="2">February</option>
              <option value="3">March</option>
              <option value="4">April</option>
              <option value="5">May</option>
              <option value="6">June</option>
              <option value="7">July</option>
              <option value="8">August</option>
              <option value="9">September</option>
              <option value="10">October</option>
              <option value="11">November</option>
              <option value="12">December</option>
            </select>
            
          </div>
        </div>

        <button type="submit" class="btn btn-success" style="width: 100%; margin-top: 20px;">Go!</button>
      </form>
    </div>
  </body>

</html>